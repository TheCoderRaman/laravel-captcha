            <directory suffix=".php">./src</directory>
        </include>
    </coverage>
    <php>
        <server name="APP_ENV" value="testing"/>
    </php>
    <logging>
        <junit outputFile="build/unit_report.xml"/>
    </logging>
</phpunit>
